{
  "name": "cap-covid-tracker",
  "version": "1.0.0",
  "description": "Yet another covid-19 tracker using CAP + Fiori Elements",
  "repository": "https://github.com/kainiklas/cap-covid-tracker.git",
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/kainiklas/cap-covid-tracker/issues"
  },
  "author": {
    "name": "Kai Niklas <info@kai-niklas.de>",
    "url": "https://kai-niklas.de"
  },
  "dependencies": {
    "@sap/cds": "^5",
    "express": "^4",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.84.11"
  },
  "scripts": {
    "start": "cds deploy && cds run",
    "watch": "cds watch",
    "heroku-prebuild": "npm i \"@sap/cds-dk\""
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "sapux": [
    "app\\list-report"
  ]
}